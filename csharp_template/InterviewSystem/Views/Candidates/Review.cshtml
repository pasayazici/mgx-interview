@* InterviewSystem/Views/Candidates/Review.cshtml *@
@model InterviewSystem.Application.DTOs.CandidateDto
@{
    ViewData["Title"] = "Review Candidate";
}

<div class="container mt-4">
    <h2>Review Candidate Interview</h2>

    <div class="card mb-4">
        <div class="card-header">
            <h4>Candidate Information</h4>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Email</dt>
                <dd class="col-sm-9">@Model.Email</dd>

                <dt class="col-sm-3">Interview</dt>
                <dd class="col-sm-9">@Model.InterviewTitle</dd>

                <dt class="col-sm-3">Registration Date</dt>
                <dd class="col-sm-9">@Model.RegistrationDate.ToString("g")</dd>

                <dt class="col-sm-3">Interview Date</dt>
                <dd class="col-sm-9">@(Model.InterviewDate?.ToString("g") ?? "-")</dd>

                <dt class="col-sm-3">Status</dt>
                <dd class="col-sm-9">@Model.Status</dd>
            </dl>
        </div>
    </div>

    @if (!string.IsNullOrEmpty(Model.VideoUrl))
    {
        <div class="card mb-4">
            <div class="card-header">
                <h4>Interview Video</h4>
            </div>
            <div class="card-body">
                <div class="ratio ratio-16x9">
                    <video controls>
                        <source src="@Model.VideoUrl" type="video/mp4">
                        Your browser does not support the video tag.
                    </video>
                </div>
            </div>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h4>Evaluation</h4>
        </div>
        <div class="card-body">
            <form asp-action="UpdateFeedback" method="post">
                <input type="hidden" name="id" value="@Model.Id" />
                
                <div class="form-group mb-3">
                    <label for="score">Score (0-100)</label>
                    <input type="number" class="form-control" id="score" name="score" 
                           min="0" max="100" value="@Model.Score" required />
                </div>

                <div class="form-group mb-3">
                    <label for="feedback">Feedback</label>
                    <textarea class="form-control" id="feedback" name="feedback" 
                              rows="5" required>@Model.Feedback</textarea>
                </div>

                <button type="submit" class="btn btn-primary">Save Evaluation</button>
                <a asp-action="Index" class="btn btn-secondary">Back to List</a>
            </form>
        </div>
    </div>
</div>